{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },

    "settings": {
        "import/resolver": {
            "node":{
                "extensions": [".ts", ".js", ".json"]
            }
        }
    },

    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-console": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "ts": "never"
            }
        ]
    }

}